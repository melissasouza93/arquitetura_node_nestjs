{
    "moduleFileExtensions": [
      "json",
      "ts",
      "js"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/mocks/",
      "/tests/",
      "/coverage/",
      "/config/",
      "/health/",
      "/logging/"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/main.ts",
      "!src/**/*.module.ts"
    ]
  }